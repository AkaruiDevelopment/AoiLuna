{
    "compilerOptions": {
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "removeComments": true,
    },
    "exclude": ["./site/**"]
}
